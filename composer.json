{
    "name": "carvemerson/skeleton-php",
    "description": "A skeleton to be used on laravel packages",
    "type": "library",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "orchestra/testbench": "^10.2",
        "laravel/pint": "^1.22",
        "rector/rector": "^2.0",
        "pestphp/pest-plugin-type-coverage": "^3.1",
        "larastan/larastan": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Carvemerson\\SkeletonPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "workbench/app/",
            "Database\\Factories\\": "workbench/database/factories/",
            "Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "emersoncarvalho",
            "email": "carvemerson@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "refactor": "rector",
        "lint": "pint",
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --parallel --min=100",
        "test": [
            "@clear",
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
